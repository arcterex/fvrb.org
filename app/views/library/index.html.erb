      <ul class="books-owned">
        <% member.books.each do |book| %>
          <li><%= book.title %></li>
        <% end %>
      </ul>  
<div class="clear"></div>
    </div><!-- /.user -->
    <% end %>
<div class="clear"></div>    
  </div><!-- /#content -->

