<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>

<div id="comments_container">
  <%= render_threaded_comments(@post.comments) -%>
  <%= render_comment_form(@new_comment) -%>
</div>

<% if admin? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>